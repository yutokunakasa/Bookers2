<h3>User info(編集ページ)</h3>

<% if @user.errors.any? %>
<h3><%= @user.errors.count %>errors prohibited this book from being saved:</h3>

  <% @user.errors.full_messages.each do |message| %>
<ul>
  <li><%= message %></li>
</ul>

<% end %>
<% end %>

<div class="container">
<%= form_for(@user) do |f| %>
<div class="row">
 <label class="control-label sr-only">Name</label>
 <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
 <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>

<div class="row">
 <div class="user-edit-image">
  <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
</div>
<label class="control-label sr-only">Image</label><br>
<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
</div> 

<div class="row">
  <label class="control-label sr-only">introduction</label>
  <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail" %>
  <!-- 自己紹介（introduce)を書きたい -->
  <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
</div>

<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
<% end %>

</div>