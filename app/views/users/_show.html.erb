


<div class="container">
  <div class="row">
    <div class="col-xs-3">
      <h2>User info</h2>

      <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>

      <table class="table">
      <thead>
        <th></th>
        <th></th>
      </thead>
        <tr>
          <td>name:</td>
          <td><%= user.name %></td>
        </tr>

        <tr>
          <td>introduction:</td>
          <td><%= user.introduction %></td>
        </tr>

        <tr><% if user.id == current_user.id %></tr>
        <% end %>
      </table>

      <% if @user.id == current_user.id %>
      <%= link_to " ", edit_user_path(user), class: "btn btn-default glyphicon glyphicon-wrench" %>
      <% end %>

      <h1>New book</h1>
      <%= form_for(book) do |f| %>
      <h4>Title</h4>
      <%= f.text_field :title %>
      <h4>Opinion</h4>
      <%= f.text_area :body %><br>
      <%= f.submit 'Create Book', class: "btn btn-primary" %>
      <% end %>
    </div>